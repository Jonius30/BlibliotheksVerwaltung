@page "/"
@using BibliotheksVerwaltungLib.Interfaces;
@using BibliotheksVerwaltungLib.Models.Dtos;
@using System.Text.Json;
@inject IAutorService autorService
<h1>Hello, world!</h1>

@code{
    protected override async Task OnInitializedAsync()
    {
        AutorDto autorFromCreate = await autorService.CreateAsync(new());
        AutorDto autorFromUpdate = await autorService.UpdateAsync(new());
        List<AutorDto> autorenFromList = await autorService.ListAsnyc();
        AutorDto autorFromId = await autorService.GetByIDAsync(new());

        Console.WriteLine("Create:" + JsonSerializer.Serialize(autorFromCreate));
        Console.WriteLine("Update:" + JsonSerializer.Serialize(autorFromUpdate));
        Console.WriteLine("List:" + JsonSerializer.Serialize(autorenFromList));
        Console.WriteLine("ByID:" + JsonSerializer.Serialize(autorFromId));

    }
}